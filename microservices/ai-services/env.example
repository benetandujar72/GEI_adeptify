# ============================================================================
# AI SERVICES ENVIRONMENT VARIABLES
# ============================================================================

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server port
PORT=3008

# Environment (development, staging, production)
NODE_ENV=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================================================
# SECURITY
# ============================================================================

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-here

# JWT Expiration time (in seconds)
JWT_EXPIRES_IN=86400

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://gei.adeptify.es

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LLM GATEWAY CONFIGURATION
# ============================================================================

# LLM Gateway URL
LLM_GATEWAY_URL=http://localhost:3007

# LLM API Key
LLM_API_KEY=your-llm-api-key-here

# LLM Gateway timeout (in milliseconds)
LLM_TIMEOUT=30000

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis URL for caching and queues
REDIS_URL=redis://localhost:6379

# Redis password (if required)
REDIS_PASSWORD=

# Redis database number
REDIS_DB=0

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Enable caching
CACHE_ENABLED=true

# Cache TTL (in seconds)
CACHE_TTL=3600

# Cache max size (number of items)
CACHE_MAX_SIZE=1000

# Cache strategy (lru, lfu, fifo)
CACHE_STRATEGY=lru

# ============================================================================
# VECTOR STORE CONFIGURATION
# ============================================================================

# Vector store type (chroma, pgvector)
VECTOR_STORE_TYPE=chroma

# Vector store URL
VECTOR_STORE_URL=http://localhost:8000

# Vector store API key (if required)
VECTOR_STORE_API_KEY=

# Vector store collections
VECTOR_STORE_COLLECTIONS=documents,embeddings,metadata

# Vector dimensions
VECTOR_DIMENSIONS=1536

# ============================================================================
# ML MODEL CONFIGURATION
# ============================================================================

# ML model storage path
ML_MODEL_STORAGE=./models

# Default models to load
ML_DEFAULT_MODELS=performance-prediction,engagement-classification,content-recommendation

# Model training timeout (in milliseconds)
ML_TRAINING_TIMEOUT=300000

# Model prediction timeout (in milliseconds)
ML_PREDICTION_TIMEOUT=30000

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

# Queue concurrency
QUEUE_CONCURRENCY=5

# Queue retry attempts
QUEUE_RETRY_ATTEMPTS=3

# Queue retry delay (in milliseconds)
QUEUE_RETRY_DELAY=5000

# Queue job timeout (in milliseconds)
QUEUE_JOB_TIMEOUT=60000

# ============================================================================
# AI MODEL CONFIGURATION
# ============================================================================

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google AI API Key
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Default AI model
DEFAULT_AI_MODEL=gpt-3.5-turbo

# AI model temperature
AI_MODEL_TEMPERATURE=0.7

# AI model max tokens
AI_MODEL_MAX_TOKENS=2000

# ============================================================================
# ANALYTICS CONFIGURATION
# ============================================================================

# Analytics data retention (in days)
ANALYTICS_RETENTION_DAYS=90

# Analytics batch size
ANALYTICS_BATCH_SIZE=1000

# Analytics processing interval (in minutes)
ANALYTICS_PROCESSING_INTERVAL=15

# Enable real-time analytics
ANALYTICS_REALTIME_ENABLED=true

# ============================================================================
# PERSONALIZATION CONFIGURATION
# ============================================================================

# Personalization cache TTL (in seconds)
PERSONALIZATION_CACHE_TTL=1800

# Personalization confidence threshold
PERSONALIZATION_CONFIDENCE_THRESHOLD=0.7

# Enable adaptive learning
ADAPTIVE_LEARNING_ENABLED=true

# Learning style detection enabled
LEARNING_STYLE_DETECTION_ENABLED=true

# ============================================================================
# CONTENT GENERATION CONFIGURATION
# ============================================================================

# Content generation timeout (in milliseconds)
CONTENT_GENERATION_TIMEOUT=60000

# Maximum content length (in words)
MAX_CONTENT_LENGTH=5000

# Enable content validation
CONTENT_VALIDATION_ENABLED=true

# Content quality threshold
CONTENT_QUALITY_THRESHOLD=0.8

# ============================================================================
# MONITORING AND METRICS
# ============================================================================

# Enable Prometheus metrics
PROMETHEUS_ENABLED=true

# Metrics port
METRICS_PORT=9090

# Health check interval (in seconds)
HEALTH_CHECK_INTERVAL=30

# Performance monitoring enabled
PERFORMANCE_MONITORING_ENABLED=true

# ============================================================================
# DATABASE CONFIGURATION (if using database)
# ============================================================================

# Database URL
DATABASE_URL=postgresql://username:password@localhost:5432/ai_services

# Database connection pool size
DATABASE_POOL_SIZE=10

# Database connection timeout (in milliseconds)
DATABASE_TIMEOUT=5000

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================

# File upload directory
UPLOAD_DIR=./uploads

# Maximum file size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_FILE_TYPES=pdf,docx,txt,csv,xlsx,jpg,png

# ============================================================================
# EMAIL CONFIGURATION (for notifications)
# ============================================================================

# SMTP Host
SMTP_HOST=smtp.gmail.com

# SMTP Port
SMTP_PORT=587

# SMTP Username
SMTP_USERNAME=your-email@gmail.com

# SMTP Password
SMTP_PASSWORD=your-app-password

# Email from address
EMAIL_FROM=noreply@adeptify.es

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# User Service URL
USER_SERVICE_URL=http://localhost:3001

# Course Service URL
COURSE_SERVICE_URL=http://localhost:3002

# Resource Service URL
RESOURCE_SERVICE_URL=http://localhost:3003

# Communication Service URL
COMMUNICATION_SERVICE_URL=http://localhost:3004

# Analytics Service URL
ANALYTICS_SERVICE_URL=http://localhost:3005

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD_ENABLED=false

# Development server host
DEV_HOST=localhost

# Development server port
DEV_PORT=3008

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================

# Test database URL
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/ai_services_test

# Test timeout (in milliseconds)
TEST_TIMEOUT=10000

# Enable test logging
TEST_LOGGING_ENABLED=false

# ============================================================================
# PRODUCTION CONFIGURATION
# ============================================================================

# Production server host
PROD_HOST=0.0.0.0

# Production server port
PROD_PORT=3008

# Production log level
PROD_LOG_LEVEL=warn

# Enable compression
COMPRESSION_ENABLED=true

# Enable security headers
SECURITY_HEADERS_ENABLED=true

# ============================================================================
# BACKUP AND RECOVERY
# ============================================================================

# Backup directory
BACKUP_DIR=./backups

# Backup retention (in days)
BACKUP_RETENTION_DAYS=30

# Enable automatic backups
AUTO_BACKUP_ENABLED=false

# Backup schedule (cron expression)
BACKUP_SCHEDULE=0 2 * * *

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log file directory
LOG_DIR=./logs

# Log file max size (in bytes)
LOG_MAX_SIZE=5242880

# Log file max files
LOG_MAX_FILES=5

# Enable log rotation
LOG_ROTATION_ENABLED=true

# Log format (json, simple)
LOG_FORMAT=json

# ============================================================================
# API DOCUMENTATION
# ============================================================================

# API documentation enabled
API_DOCS_ENABLED=true

# API documentation path
API_DOCS_PATH=/api/ai/docs

# Swagger UI enabled
SWAGGER_UI_ENABLED=true

# Swagger UI path
SWAGGER_UI_PATH=/api/ai/swagger

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable advanced AI features
ADVANCED_AI_FEATURES_ENABLED=true

# Enable experimental features
EXPERIMENTAL_FEATURES_ENABLED=false

# Enable beta features
BETA_FEATURES_ENABLED=false

# Enable A/B testing
AB_TESTING_ENABLED=false

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Worker threads count
WORKER_THREADS_COUNT=4

# Memory limit (in MB)
MEMORY_LIMIT_MB=512

# CPU limit (percentage)
CPU_LIMIT_PERCENT=80

# Request timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# ============================================================================
# SECURITY HEADERS
# ============================================================================

# Content Security Policy
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

# X-Frame-Options
X_FRAME_OPTIONS=DENY

# X-Content-Type-Options
X_CONTENT_TYPE_OPTIONS=nosniff

# X-XSS-Protection
X_XSS_PROTECTION=1; mode=block

# Referrer Policy
REFERRER_POLICY=strict-origin-when-cross-origin

# ============================================================================
# CUSTOM CONFIGURATION
# ============================================================================

# Custom configuration can be added here
# CUSTOM_FEATURE_ENABLED=true
# CUSTOM_API_KEY=your-custom-api-key
# CUSTOM_ENDPOINT=https://api.custom-service.com