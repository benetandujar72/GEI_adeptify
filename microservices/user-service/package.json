{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User Management Microservice for EduAI Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=esm",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "migrate": "tsx src/database/migrate.ts",
    "migrate:status": "tsx -e \"import { DatabaseMigrator } from './src/database/migrate.js'; new DatabaseMigrator().checkMigrationStatus();\"",
    "migrate:rollback": "tsx -e \"import { rollbackMigration } from './src/database/migrate.js'; rollbackMigration();\"",
    "backup:setup": "chmod +x scripts/backup.sh scripts/setup-backup-cron.sh && ./scripts/setup-backup-cron.sh install",
    "backup:remove": "./scripts/setup-backup-cron.sh remove",
    "backup:status": "./scripts/setup-backup-cron.sh status",
    "backup:test": "./scripts/setup-backup-cron.sh test",
    "backup:manual": "./scripts/backup.sh",
    "db:init": "npm run migrate",
    "db:reset": "npm run migrate:rollback && npm run migrate",
    "db:status": "npm run migrate:status",
    "security:audit": "npm audit && npm audit fix",
    "security:check": "npm run security:audit && npm run type-check && npm run lint",
    "monitoring:start": "node dist/index.js",
    "monitoring:health": "curl -f http://localhost:3001/health",
    "monitoring:metrics": "curl http://localhost:3001/monitoring/metrics",
    "monitoring:alerts": "curl http://localhost:3001/monitoring/alerts/status",
    "monitoring:logs": "tail -f logs/combined.log",
    "monitoring:errors": "tail -f logs/error.log",
    "monitoring:system": "curl http://localhost:3001/monitoring/system/info",
    "monitoring:dependencies": "curl http://localhost:3001/monitoring/dependencies",
    "monitoring:performance": "curl http://localhost:3001/monitoring/performance",
    "logs:clear": "rm -f logs/*.log",
    "logs:archive": "tar -czf logs-$(date +%Y%m%d-%H%M%S).tar.gz logs/",
    "metrics:export": "curl http://localhost:3001/monitoring/metrics/json > metrics-$(date +%Y%m%d-%H%M%S).json",
    "alerts:test": "curl -X POST http://localhost:3001/monitoring/alerts/trigger -H 'Content-Type: application/json' -d '{\"ruleId\":\"high-error-rate\",\"message\":\"Test alert\"}'",
    "prometheus:test": "curl http://localhost:3001/monitoring/metrics | grep -E '^(http_requests_total|http_request_duration_seconds|memory_usage_bytes)'"
  },
  "keywords": [
    "microservice",
    "user-management",
    "authentication",
    "authorization",
    "education",
    "mcp",
    "security",
    "rate-limiting",
    "validation",
    "monitoring",
    "logging",
    "prometheus",
    "alerts",
    "metrics"
  ],
  "author": "EduAI Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "winston-elasticsearch": "^0.17.7",
    "express-async-errors": "^3.1.1",
    "redis": "^4.6.10",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "joi": "^17.11.0",
    "express-slow-down": "^2.0.1",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "prom-client": "^15.1.0",
    "elasticsearch": "^16.7.3",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/nodemailer": "^6.4.14",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/socket.io": "^3.0.2",
    "@types/hpp": "^0.2.3",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "esbuild": "^0.19.8",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "drizzle-kit": "^0.20.9",
    "prettier": "^3.1.1",
    "@types/express-rate-limit": "^6.0.0",
    "@types/express-slow-down": "^1.3.5",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adeptify/eduai-platform.git",
    "directory": "microservices/user-service"
  },
  "bugs": {
    "url": "https://github.com/adeptify/eduai-platform/issues"
  },
  "homepage": "https://github.com/adeptify/eduai-platform#readme"
} 