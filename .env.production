# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# CORS
ALLOWED_ORIGINS=https://eduai-platform.com,https://app.eduai-platform.com
