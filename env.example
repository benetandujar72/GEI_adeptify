# ============================================================================
# GEI UNIFIED PLATFORM - VARIABLES DE ENTORNO
# ============================================================================

# ============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================================================
DATABASE_URL=postgresql://gei_user:gei_password@localhost:5432/gei_unified
REDIS_URL=redis://localhost:6379

# ============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ============================================================================
SESSION_SECRET=tu-session-secret-super-seguro-cambiar-en-produccion
GOOGLE_CLIENT_ID=tu-google-client-id
GOOGLE_CLIENT_SECRET=tu-google-client-secret

# ============================================================================
# APIs DE INTELIGENCIA ARTIFICIAL
# ============================================================================
GEMINI_API_KEY=tu-gemini-api-key
OPENAI_API_KEY=tu-openai-api-key
ANTHROPIC_API_KEY=tu-anthropic-api-key

# ============================================================================
# CONFIGURACIÓN DEL ENTORNO
# ============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================
# ============================================================================
# CONFIGURACIÓN DE CORS
# ============================================================================
# Para desarrollo: múltiples dominios locales
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
# Para producción: dominio específico
# CORS_ORIGIN=https://gei.adeptify.es
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CONFIGURACIÓN DE LOGS
# ============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ============================================================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password

# ============================================================================
# CONFIGURACIÓN DE GOOGLE SHEETS (OPCIONAL)
# ============================================================================
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"..."}

# ============================================================================
# CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# ============================================================================
SENTRY_DSN=tu-sentry-dsn
NEW_RELIC_LICENSE_KEY=tu-new-relic-key

# ============================================================================
# CONFIGURACIÓN DE PWA (OPCIONAL)
# ============================================================================
PWA_NAME=GEI Unified Platform
PWA_SHORT_NAME=GEI
PWA_DESCRIPTION=Ecosistema Educatiu Intel·ligent Unificat
PWA_THEME_COLOR=#1976D2
PWA_BACKGROUND_COLOR=#ffffff

# ============================================================================
# CONFIGURACIÓN DE ANALYTICS (OPCIONAL)
# ============================================================================
GOOGLE_ANALYTICS_ID=tu-ga-id
MIXPANEL_TOKEN=tu-mixpanel-token

# ============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES (OPCIONAL)
# ============================================================================
FCM_SERVER_KEY=tu-fcm-server-key
VAPID_PUBLIC_KEY=tu-vapid-public-key
VAPID_PRIVATE_KEY=tu-vapid-private-key

# ============================================================================
# CONFIGURACIÓN DE BACKUP (OPCIONAL)
# ============================================================================
BACKUP_S3_BUCKET=gei-backups
AWS_ACCESS_KEY_ID=tu-aws-access-key
AWS_SECRET_ACCESS_KEY=tu-aws-secret-key
AWS_REGION=eu-west-1

# ============================================================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true 